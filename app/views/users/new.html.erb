



<style>
	input{
		display: block;
		margin: 10px;
		padding: 10px;
	}
	.center-block {
		float: none;
	}
</style>

<div class="container">
	<div class="row">
		<div class="col-md-4 center-block">
		<h1> Sign Up </h1>
			<%= form_for @user do |f| %>
			  Name: <%= f.text_field :name, required: true %><br />
			  Email: <%= f.email_field :email, required: true %><br />
			  Password: <%= f.password_field :password, required: true %><br />
			  Confirm Password: <%= f.password_field :confirm_password, required: true %><br /><br />


			  <%= f.submit %>
			<% end %>
		</div>
	</div>
</div>
